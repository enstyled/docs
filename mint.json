{
  "$schema": "https://mintlify.com/schema.json",
  "name": "JobKit API",
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#3b82f6",
    "light": "#3b82f6",
    "dark": "#2563eb",
    "anchors": {
      "from": "#3b82f6",
      "to": "#2563eb"
    }
  },
  "theme": "prism",
  "background": {
    "style": "gradient"
  },
  "topbar": {
    "style": "gradient"
  },
  "codeBlock": {
    "mode": "auto"
  },
  "topbarLinks": [
    {
      "name": "Homepage",
      "url": "https://www.jobkit.io"
    }
  ],
  "topbarCtaButton": {
    "name": "Get started",
    "url": "https://www.jobkit.io/new"
  },
  "anchors": [
    {
      "name": "System status",
      "icon": "robot",
      "url": "https://status.jobkit.io/"
    },
    {
      "name": "Need help?",
      "icon": "life-ring",
      "url": "mailto:hello@jobkit.io"
    },
    {
      "name": "Follow us",
      "icon": "x-twitter",
      "url": "https://x.com/jobkitsite"
    }
  ],
  "navigation": [
    {
      "group": "API Documentation",
      "pages": ["introduction", "authentication"]
    },
    {
      "group": "Jobs",
      "pages": [
        "jobs/list",
        "jobs/get",
        "jobs/create",
        "jobs/update",
        "jobs/delete"
      ]
    },
    {
      "group": "Categories",
      "pages": [
        "categories/list",
        "categories/create",
        "categories/update",
        "categories/delete"
      ]
    },
    {
      "group": "Terms",
      "pages": ["terms/list", "terms/create", "terms/update", "terms/delete"]
    },
    {
      "group": "Plans",
      "pages": ["plans/list", "plans/create", "plans/update", "plans/archive"]
    },
    {
      "group": "Other",
      "pages": ["analytics", "subscribers", "users"]
    }
  ],
  "api": {
    "baseUrl": "https://elixir.jobkit.io",
    "auth": {
      "method": "basic"
    }
  }
}
