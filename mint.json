{
  "$schema": "https://mintlify.com/schema.json",
  "name": "JobKit API",
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#3b82f6",
    "light": "#3b82f6",
    "dark": "#2563eb",
    "anchors": {
      "from": "#3b82f6",
      "to": "#2563eb"
    }
  },
  "theme": "prism",
  "background": {
    "style": "gradient"
  },
  "topbar": {
    "style": "gradient"
  },
  "codeBlock": {
    "mode": "auto"
  },
  "topbarLinks": [
    {
      "name": "Homepage",
      "url": "https://www.jobkit.io"
    }
  ],
  "topbarCtaButton": {
    "name": "Get started",
    "url": "https://www.jobkit.io/new"
  },
  "anchors": [
    {
      "name": "System status",
      "icon": "robot",
      "url": "https://status.jobkit.io/"
    },
    {
      "name": "Need help?",
      "icon": "life-ring",
      "url": "mailto:hello@jobkit.io"
    },
    {
      "name": "Follow us",
      "icon": "x-twitter",
      "url": "https://x.com/jobkitsite"
    }
  ],
  "navigation": [
    {
      "group": "API Documentation",
      "pages": ["api/introduction", "api/authentication"]
    },
    {
      "group": "Jobs",
      "pages": [
        "api/jobs/list",
        "api/jobs/get",
        "api/jobs/create",
        "api/jobs/update",
        "api/jobs/delete"
      ]
    },
    {
      "group": "Categories",
      "pages": [
        "api/categories/list",
        "api/categories/create",
        "api/categories/update",
        "api/categories/delete"
      ]
    },
    {
      "group": "Terms",
      "pages": [
        "api/terms/list",
        "api/terms/create",
        "api/terms/update",
        "api/terms/delete"
      ]
    },
    {
      "group": "Plans",
      "pages": [
        "api/plans/list",
        "api/plans/create",
        "api/plans/update",
        "api/plans/archive"
      ]
    },
    {
      "group": "Other",
      "pages": ["api/analytics", "api/subscribers", "api/users"]
    }
  ],
  "api": {
    "baseUrl": "https://elixir.jobkit.io",
    "auth": {
      "method": "basic"
    }
  }
}
